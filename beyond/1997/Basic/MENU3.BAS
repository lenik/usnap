DEFINT A-Z
TF = 15: TB = 1: MF = 2: MB = 1: N = 6: X = 1: Y = 1: C = 1
SCREEN 0: COLOR TF, TB: CLS : DIM M$(N), FC(N), BC(N)
LOCATE 25, 30: PRINT "谢继雷菜单  V2.00"
M$(1) = "文件"
M$(2) = "加密"
M$(3) = "显示"
M$(4) = "运行"
M$(5) = "调试"
M$(6) = "帮助"
FOR J = 1 TO N: IF LEN(M$(J)) > L THEN L = LEN(M$(J))
NEXT J: FOR J = 1 TO N: M$(J) = M$(J) + SPACE$(L - LEN(M$(J))): NEXT J
LOCATE X, Y: COLOR MF, MB: PRINT CHR$(218); STRING$(L, CHR$(196)); CHR$(191)
FOR J = 1 TO N: LOCATE X + J, Y: COLOR MF, MB
PRINT CHR$(179); M$(J); CHR$(179); : COLOR 0, 0: PRINT AH$; CHR$(32); AH$: NEXT J
COLOR MF, MB: LOCATE X + N + 1, Y: PRINT CHR$(192); STRING$(L, CHR$(196)); CHR$(217);
COLOR 0, 0: PRINT AH$; CHR$(32); AH$: LOCATE , Y + 1: PRINT SPACE$(L + 2)
FOR J = 1 TO N: FC(J) = MF: BC(J) = MB: NEXT J: FC(C) = MB: BC(C) = MF
120 A$ = INKEY$: IF A$ = CHR$(13) GOTO 230 ELSE IF A$ = CHR$(27) THEN C = 0: GOTO 230
FOR J = 1 TO N: IF A$ <> CHR$(0) + CHR$(72) OR BC(J) = MB THEN 170
IF J = 1 THEN SWAP FC(1), FC(N): SWAP BC(1), BC(N): C = N
IF J > 1 THEN SWAP FC(J), FC(J - 1): SWAP BC(J), BC(J - 1): C = J - 1
GOTO 220
170 IF A$ <> CHR$(0) + CHR$(80) OR BC(J) = MB THEN 210
IF J = N THEN SWAP FC(1), FC(N): SWAP BC(1), BC(N): C = 1
IF J < N THEN SWAP FC(J), FC(J + 1): SWAP BC(J), BC(J + 1): C = J + 1
GOTO 220
210 NEXT J
220 FOR J = 1 TO N: LOCATE X + J, Y + 1: COLOR FC(J), BC(J): PRINT M$(J): NEXT J: GOTO 120
230 IF C = 1 THEN 310
IF C = 2 THEN 320
IF C = 3 THEN 330
IF C = 4 THEN 340
IF C = 5 THEN 350
IF C = 6 THEN 360
310  SHELL "FILE"
END
320  SHELL "PASS"
END
330  SHELL "LIST"
END
340  SHELL "RUNI"
END
350  SHELL "DEBG"
END
360  SHELL "HELP"
END
2000 END
